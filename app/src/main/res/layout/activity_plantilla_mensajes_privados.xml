<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:onClick="abrirCHats"
    tools:context=".Tabs.TabDesahogateActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cvMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <ImageView
                android:id="@+id/imagenMensajePrivado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/textMensajePriHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textMensajePriUsuario"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="22:30"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/textMensajePriUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textMensajePriMSJ"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textMensajePriMSJ"
                android:layout_marginTop="11dp"
                android:text="JosÃ© Alberto"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/textMensajePriMSJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textMensajePriUsuario"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_toEndOf="@+id/imagenMensajePrivado"
                android:layout_toRightOf="@+id/imagenMensajePrivado"
                android:text="Hola que tal te encuentras..."
                android:textSize="15sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
