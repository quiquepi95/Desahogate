<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framentPerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="desahogate.proyectofinal.desahogate.Tabs.TabDesahogateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnPubli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/primary"
                android:icon="@drawable/timer"
                android:text="Publicaciones"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btnAmigos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/primary"
                android:icon="@drawable/account_group"
                android:text="Amigos"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/primary"
                android:icon="@drawable/account_edit"
                android:text="Editar"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_margin="10dp"/>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sigues"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:onClick="openFriends"
                android:text="Amigos"
                android:textAlignment="center"
                android:textSize="16dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagePerfil"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                app:srcCompat="@mipmap/ic_launcher_round">
                <!--app:srcCompat="@mipmap/ic_launcher_round"
                 android:background="@drawable/layout_redondear_border"-->

            </de.hdodenhof.circleimageview.CircleImageView>


            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="204dp"
                android:text="Enrique Pintado"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewName"
                android:layout_centerHorizontal="true"
                android:text="Quiquepi95"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewUser"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:text="BiografÃ­a" />

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewBio"
                android:theme="@style/AppTheme.AppBarOverlay">
                <!--
                android:paddingTop="@dimen/appbar_padding_top" -->
                <!--
                           <android.support.v7.widget.Toolbar
                               android:id="@+id/toolbarPerfil"
                               android:layout_width="match_parent"
                               android:layout_height="?attr/actionBarSize"
                               android:layout_weight="1"
                               android:background="?attr/colorPrimary"
                               app:layout_scrollFlags="scroll|enterAlways"
                               app:popupTheme="@style/AppTheme.PopupOverlay"
                               app:title="@string/app_name"></android.support.v7.widget.Toolbar>
          -->
            </android.support.design.widget.AppBarLayout>


        </RelativeLayout>

    </LinearLayout>
